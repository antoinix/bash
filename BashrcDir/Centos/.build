#! /bin/bash

# Note: Be sourced in .bashrc automatically

# ===
# === bash-it theme build
# ===
if [ ! -e $BASH_IT/themes/atomic ]
then
    mkdir $BASH_IT/themes/atomic
fi

if [ ! -L $BASH_IT/themes/atomic/atomic.theme.bash ]
then
    ln -sf $BASH_DIR/BashrcDir/Centos/theme/atomic.theme.bash $BASH_IT/themes/atomic/atomic.theme.bash
else
    if [ -r $BASH_IT/themes/atomic/atomic.theme.bash ]
    then
        if [[ -n  $(diff $BASH_DIR/BashrcDir/Centos/theme/atomic.theme.bash $BASH_IT/themes/atomic/atomic.theme.bash) ]]
        then
            ln -sf $BASH_DIR/BashrcDir/Centos/theme/atomic.theme.bash $BASH_IT/themes/atomic/atomic.theme.bash
        fi
    else
        ln -sf $BASH_DIR/BashrcDir/Centos/theme/atomic.theme.bash $BASH_IT/themes/atomic/atomic.theme.bash
    fi
fi


# ===
# === bash-git theme build
# ===
if [ ! -e $BASH_DIR/bash-git/themes ]
then
    mkdir $BASH_DIR/bash-git/themes
fi

if [ ! -L $BASH_DIR/bash-git/themes/Default.bgptheme ]
then
    ln -sf $BASH_DIR/BashrcDir/Centos/theme/Default.bgptheme $BASH_DIR/bash-git/themes/Default.bgptheme
else
    if [ -r $BASH_DIR/bash-git/themes/Default.bgptheme ]
    then
        if [[ -n $(diff $BASH_DIR/BashrcDir/Centos/theme/Default.bgptheme $BASH_DIR/bash-git/themes/Default.bgptheme) ]]
        then
            ln -sf $BASH_DIR/BashrcDir/Centos/theme/Default.bgptheme $BASH_DIR/bash-git/themes/Default.bgptheme
        fi
    else
        ln -sf $BASH_DIR/BashrcDir/Centos/theme/Default.bgptheme $BASH_DIR/bash-git/themes/Default.bgptheme
    fi
fi
